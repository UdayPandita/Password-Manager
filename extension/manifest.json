{
  "manifest_version": 3,
  "name": "LPH Password Manager",
  "version": "1.0.0",
  "description": "A secure, end-to-end encrypted password manager with mnemonic recovery (Electron Browser Edition).",

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "icons": {
    "16": "icons/logo.png",
    "32": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },

  "action": {
    "default_title": "LPH Password Manager",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo.png",
      "32": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    }
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "auth.html",
        "popup.html",
        "mnemonic-display.html",
        "mnemonic-verify.html",
        "signup-complete.html",
        "recover.html",
        "add.html",
        "view.html",
        "share.html",
        "options.html",
        "browser-compat.js",
        "server-config.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
